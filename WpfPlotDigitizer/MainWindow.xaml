<mahapps:MetroWindow xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:local="clr-namespace:WpfPlotDigitizer"
                     xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                     xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
                     xmlns:mvvm="clr-namespace:CycWpfLibrary.MVVM;assembly=CycWpfLibrary"
                     xmlns:uc="clr-namespace:CycWpfLibrary.UserControls;assembly=CycWpfLibrary.UserControls"
                     xmlns:icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
                     xmlns:cyc="clr-namespace:CycWpfLibrary;assembly=CycWpfLibrary"
                     xmlns:Converters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
                     x:Class="WpfPlotDigitizer.MainWindow"
                     mc:Ignorable="d"
                     WindowStartupLocation="CenterScreen"
                     d:DataContext="{d:DesignInstance {x:Type local:MainWindowVM}, IsDesignTimeCreatable=True}"
                     GlowBrush="{DynamicResource AccentColorBrush}"
                     Icon="resources/icon_digitizer.ico"
                     ShowIconOnTitleBar="True"
                     Title="Plot Digitizer"
                     Height="600"
                     Width="900">
  <mahapps:MetroWindow.RightWindowCommands>
    <mahapps:WindowCommands>
      <Button>
        <Button.RenderTransform>
          <TranslateTransform Y="-2" />
        </Button.RenderTransform>
        <icon:PackIconModern Kind="Information"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Width="24"
                             Height="20" />
      </Button>
      <Button>
        <Button.RenderTransform>
          <TranslateTransform Y="-2" />
        </Button.RenderTransform>
        <icon:PackIconModern Kind="HomeQuestion"
                             VerticalAlignment="Center"
                             HorizontalAlignment="Center"
                             Width="24"
                             Height="20" />
      </Button>
    </mahapps:WindowCommands>
  </mahapps:MetroWindow.RightWindowCommands>
  <Grid x:Name="gridMain">
    <Image Name="image"
           Width="100"
           Height="100"
           Source="images/data.png" 
           Opacity="1"/>
    <Border Width="{Binding ElementName=image, Path=ActualWidth}"
            Height="{Binding ElementName=image, Path=ActualHeight}"
            Background="#4C000000" />
    <Rectangle Width="{Binding ElementName=image, Path=ActualWidth}"
               Height="{Binding ElementName=image, Path=ActualHeight}"
               Opacity="1">
      <Rectangle.Fill>
        <VisualBrush Visual="{Binding ElementName=image}"
                     Viewbox="0,0,0.5,0.5"
                     Viewport="0,0,0.5,0.5"/>
      </Rectangle.Fill>
    </Rectangle>
    <Rectangle Width="50"
               Height="50"
               Stroke="Red" />
    <Frame Name="splashFrame"
           Panel.ZIndex="1" />

    <uc:PageControl CurrentPage="{Binding PageManager.CurrentPage}"
                    TurnBackCommand="{Binding PageManager.TurnBackCommand}"
                    TurnNextCommand="{Binding PageManager.TurnNextCommand}" />
  </Grid>
</mahapps:MetroWindow>
