<media:AnimatedPage x:Class="WpfPlotDigitizer.SavePage"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                    xmlns:local="clr-namespace:WpfPlotDigitizer"
                    xmlns:mahapps="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:mvvm="clr-namespace:CycWpfLibrary.MVVM;assembly=CycWpfLibrary"
                    xmlns:media="clr-namespace:CycWpfLibrary.Media;assembly=CycWpfLibrary"
                    xmlns:oxy="clr-namespace:OxyPlot.Wpf;assembly=OxyPlot.Wpf"
                    mc:Ignorable="d"
                    d:DesignHeight="450"
                    d:DesignWidth="800"
                    d:DataContext="{d:DesignInstance local:SavePageVM, IsDesignTimeCreatable=True}">
  <Grid Margin="20">
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="auto" />
    </Grid.ColumnDefinitions>
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="auto" />
    </Grid.RowDefinitions>
    <oxy:Plot Margin="0,0,20,0"
              Model="{Binding plotModel}"
              ResetInput="mouse:left, 2"
              ZoomInput="mouse:middle"
              PanInput="mouse:left"
              TrackerInput="mouse:right" />
    <!--DataGrid: Need to set height manually to allow data virtualization!!-->
    <!--<DataGrid Grid.Column="1"
              MaxColumnWidth="100"
              MaxHeight="600"
              ItemsSource="{Binding data}"
              AutoGenerateColumns="True"
              CanUserResizeColumns="False"
              CanUserResizeRows="False"
              IsReadOnly="True" />-->
    <Button Grid.ColumnSpan="2"
            Grid.Row="1"
            Content="Save"
            FontSize="30"
            FontWeight="Medium"
            Width="150"
            Height="50"
            Margin="0,20,0,0"
            mahapps:ButtonHelper.PreserveTextCase="True"
            Command="{Binding SaveCommand}" />
  </Grid>
</media:AnimatedPage>
