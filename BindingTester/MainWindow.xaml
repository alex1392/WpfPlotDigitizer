<Window x:Class="BindingTester.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BindingTester"
        xmlns:mvvm="clr-namespace:CycWpfLibrary.MVVM;assembly=CycWpfLibrary"
        mc:Ignorable="d"
        Title="MainWindow"
        Height="600"
        Width="400">
  <StackPanel Name="panel"
              VerticalAlignment="Center">
    <local:UserControl1 x:Name="usercontrol"
                        Text="{Binding Path=textA, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
    <TextBox Text="{Binding ElementName=usercontrol, Path=Text, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
             TextAlignment="Center"/>
    <Button Content="toCode"
            Click="Button_Click" />
  </StackPanel>
</Window>
